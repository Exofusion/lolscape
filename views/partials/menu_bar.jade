.logo
  a(href="/")
    img.logo_image(src="/images/lolscape_logo.png")

.menuBar
  .menuItem.overallBox
    strong.menuText Overall Hiscores
    br
    form(action="/overall/experience" method="get")
      select.regionSelect(name="overall_region")
        - var selected_region = overall_region
        option(value='0') ALL
        include region_options
      input.overallButton(type="submit" value="By XP")
    form(action="/overall/level" method="get")
      select.regionSelect(name="overall_region")
        - var selected_region = overall_region
        option(value='0') ALL
        include region_options
      input.overallButton(type="submit" value="By Level")
  .menuItem.championBox
    strong.menuText Champ Hiscores
    br
    form(action="/champion" method="get")
      select.regionSelect(name="champion_region")
        - var selected_region = champion_region
        option(value='0') ALL
        include region_options
      include champion_select_box
      input.championSubmit(type="submit" value="Search")
  .menuItem.compareUsersBox
    strong.menuText Compare
    br
    form(method="get" action="/compare")
      select.regionSelect(name="summoner1_region")
        - var selected_region = summoner1_region
        include region_options
      input.compareUsersInput(type="text" name="summoner1" value="#{(summoner1_data && summoner1_data.name && summoner1_data.name.toLowerCase().replace(/\s/g, '')) || ''}")
      br
      select.regionSelect(name="summoner2_region")
        - var selected_region = summoner2_region
        include region_options
      input.compareUsersInput(type="text" name="summoner2" value="#{(summoner2_data && summoner2_data.name && summoner2_data.name.toLowerCase().replace(/\s/g, '')) || ''}")
      br
      input.compareUsersSubmit(type="submit" value="Compare")
  .menuItem.searchBox
    strong.menuText Search By Name
    br
    form(method="get" action="/personal")
      select.regionSelect(name="region")
        - var selected_region = summoner_region
        include region_options
      input.compareUsersInput(type="text" name="summoner" value="#{(summoner_data && summoner_data.name && summoner_data.name.toLowerCase().replace(/\s/g, '')) || ''}")
      br
      input.compareUsersSubmit(type="submit" value="Search")